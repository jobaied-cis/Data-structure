#include <stdio.h>

int main() {
    int size;

    // Ask user for the size of the array
    printf("Enter the size of the array: ");
    scanf("%d", &size);

    int arr[size];  // 1D array declaration

    // Input elements
    printf("Enter %d elements:\n", size);
    for(int i = 0; i < size; i++) {
        printf("Element %d: ", i);
        scanf("%d", &arr[i]);
    }

    // Output elements
    printf("\nThe array elements are:\n");
    for(int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
